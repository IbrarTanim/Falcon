<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">#888787</item>
        <item name="colorAccent">@color/colorDarkPink</item>

    </style>

    <style name="dialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in_animation</item>
        <item name="android:windowExitAnimation">@anim/zoom_out_animation</item>
    </style>

    <style name="fadeAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_animation</item>
        <item name="android:windowExitAnimation">@anim/fade_out_animation</item>
    </style>
</resources>
