<?xml version="1.0" encoding="utf-8"?>
<selector android:color="@color/colorWhite" xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_enabled="true">
    <ripple android:color="@color/colorWhite" xmlns:android="http://schemas.android.com/apk/res/android">
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@color/colorDarkPink"/>
                <corners android:radius="8dp"/>
            </shape>
        </item>
    </ripple>
</item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPinkDisabled"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>