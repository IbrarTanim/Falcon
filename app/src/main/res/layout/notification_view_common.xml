<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notificationView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:minHeight="62dp"
    android:orientation="vertical"
    android:padding="4dp">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_notifications_none_for_notifciation"
        android:tint="@color/textBlackRegular" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/ivIcon"
        android:layout_toStartOf="@id/tvTime"
        android:fontFamily="@font/roboto_medium"
        android:text="New task assigned"
        android:textColor="@color/textPinkDark"
        android:textSize="@dimen/textNormal" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/roboto_thin"
        android:singleLine="true"
        android:text="Yesterday"
        android:textColor="@color/textBlackLight"
        android:textSize="@dimen/text_xx_small" />


    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/ivIcon"
        android:fontFamily="@font/roboto_light"
        android:text="Task Id: #201452"
        android:textColor="@color/textBlackRegular"
        android:textSize="@dimen/text_x_small" />

</RelativeLayout>