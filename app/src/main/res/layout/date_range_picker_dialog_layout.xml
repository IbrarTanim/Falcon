<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_box_dialog_bg"
    android:paddingBottom="24dp"
    android:paddingEnd="24dp"
    android:paddingStart="24dp"
    android:paddingTop="32dp">


    <TextView
        android:id="@+id/tvStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_date_range_picker_date_text"
        android:clickable="true"
        android:enabled="false"
        android:fontFamily="@font/roboto"
        android:text="10 jun, 19"
        android:textColor="@color/colorLightPink"
        android:textSize="@dimen/textXLarge"
        app:layout_constraintBottom_toBottomOf="@+id/tvTo"
        app:layout_constraintEnd_toStartOf="@+id/tvTo"
        app:layout_constraintTop_toTopOf="@+id/tvTo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/roboto"
        android:text=" - "
        android:textColor="@color/colorLightPink"
        android:textSize="@dimen/textXLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/bg_date_range_picker_date_text"
        android:clickable="true"
        android:enabled="true"
        android:fontFamily="@font/roboto"
        android:text="10 jan, 20"
        android:textColor="@color/colorLightPink"
        android:textSize="@dimen/textXLarge"
        app:layout_constraintStart_toEndOf="@+id/tvTo"
        app:layout_constraintTop_toTopOf="@+id/tvTo" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:spinnersShown="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStartDate" />

    <TextView
        android:id="@+id/tvErrMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:singleLine="true"
        android:text="* start date can't be greater than end date."
        android:textColor="@color/colorError"
        android:textSize="@dimen/text_x_small"
        app:layout_constraintStart_toStartOf="@+id/btnSubmit"
        app:layout_constraintTop_toBottomOf="@+id/datePicker" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_shadow_btn"
        android:stateListAnimator="@null"
        android:text="Apply Date"
        android:textAllCaps="false"
        android:textColor="@color/colorLightPink"
        android:textSize="@dimen/textSmall"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/datePicker" />


</android.support.constraint.ConstraintLayout>